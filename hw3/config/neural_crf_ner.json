{
  "random_seed": 42,
  "train_dataset": {
    "data_path": "data/twitter_train.ner",
    "max_length": 30
  },
  "validation_dataset": {
    "data_path": "data/twitter_dev.ner",
    "max_length": 30
  },
  "model": {
    "type": "neural_crf.NeuralCrf",
    "embeddings": {
      "embedding_dim": 50,
      "embedding_path": "./embeddings/glove.6B.50d.txt"
    },
    "encoder": {
      "type": "torch.nn.LSTM",
      "input_size": 50,
      "hidden_size": 25,
      "num_layers": 1,
      "bidirectional": true
    },
    "tag_projection": {
      "type": "torch.nn.Linear",
      "in_features": 50,
      "out_features": 22
    }
  },
  "training": {
    "batch_size": 32,
    "num_epochs": 20,
    "optimizer": {
      "type": "torch.optim.Adam",
      "lr": 0.001
    }
  }
}